---
import type { CollectionEntry } from "astro:content";

import BaseLayout from "./Base.astro";

interface Props {
	post: CollectionEntry<"project">;
}

const { post } = Astro.props;
const {
	data: { title, description },
} = post;
---

<BaseLayout meta={{ title, description }}>
	<div class="gap-x-10 lg:flex lg:items-start">
		<article class="flex-grow break-words">
			<div
				class="prose-sm prose-cactus mt-12 prose-headings:font-semibold prose-headings:before:absolute prose-headings:before:-ms-4 prose-headings:before:text-accent prose-headings:before:content-['#'] prose-th:before:content-none"
			>
				<slot />
			</div>
		</article>
	</div>
</BaseLayout>
