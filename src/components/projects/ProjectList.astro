---
const { items } = Astro.props;
---

<div class="grid grid-cols-1 gap-10 sm:grid-cols-2 md:grid-cols-3">
	{
		items.map((item: any) => (
			<div class="flex flex-col ">
				<img
					src={item.imgSrc}
					alt={item.imgAlt}
					class="h-50 w-full rounded-lg object-cover ease-in-out hover:opacity-80"
				/>
				<h3 class="title my-3 text-center text-xl">{item.title}</h3>
				<h3 class="text-center">{item.title}</h3>
			</div>
		))
	}
</div>
