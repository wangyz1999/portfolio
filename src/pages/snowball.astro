---
import PageLayout from "@/layouts/Base";
import { Image } from "@astrojs/image/components";
import aboutImg from "../assets/about-astro.png";

const meta = {
	title: "My cat snowball!",
	description: "You found my cat!",
};
---

<PageLayout meta={meta}>
	<h1 class="title mb-6">Introducing 雪球 (snowball)</h1>
	<div class="my-4 grid justify-center">
		<Image
			class="rotate-180"
			src={aboutImg}
			alt="A cartoon cactus looking at the 'Astro.build' logo"
			loading="eager"
		/>
	</div>
</PageLayout>
