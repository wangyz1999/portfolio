---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import ResearchPreview from "@/components/research/ResearchPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate, sortResearchByDate } from "@/utils";
import { Picture } from "@astrojs/image/components";
import profile_pic from "../assets/profile.jpg";
import InLineLink from "@/components/InLineLink";

const MAX_POSTS = 10;
const MAX_RESEARCH = 10;

const allPosts = await getCollection("post");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const allResearch = await getCollection("research");
const allResearchByDate = sortResearchByDate(allResearch).slice(0, MAX_RESEARCH);
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<div class="flex flex-col space-y-4 sm:flex-row sm:space-x-4 sm:space-y-0">
			<div class="flex-1 p-4">
				<Picture
					class="mx-auto w-full rounded-md"
					widths={[400, 768, 1024, 2040]}
					sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
					loading="eager"
					width={1024}
					height={576}
					src={profile_pic}
					alt="profile"
				/>
				<div class="mt-4">
					<SocialList />
				</div>
			</div>
			<div class="flex-1 p-4">
				<h1 class="text-xxl title mb-3">Yunzhe Wang</h1>
				<p class="mb-3">
					I'm an AI resident at Bubble.io, focusing on generative AI research in text-to-web-app
					generation. I did my M.S. in Computer Science at Columbia University, work with Prof. <InLineLink
						href="https://www.hodlipson.com/"
						text="Hod Lipson"
					/>, Dr. <InLineLink href="http://boyuanchen.com/" text="Boyuan Chen" />, and PhD student <InLineLink
						href="https://www.yuhang-hu.com/"
						text="Yuhang Hu"
					/> on efficient machine learning in robotics.
				</p>
				<p class="mb-3">
					Previously, I did my B.S. in Computational Neuroscience, B.A. in Applied Mathematics, and
					a Minor in Computer Science at the University of Southern California. I was fortunate to
					work with Dr. <InLineLink
						href="https://www.linkedin.com/in/volkan-ustun-9883a74/"
						text="Volkan Ustun"
					/> and Prof. <InLineLink
						href="https://viterbi.usc.edu/directory/faculty/Rosenbloom/Paul"
						text="Paul Rosenbloom"
					/>
					on Cognitive Architecture and Reinforcement Learning for Social AI Agents.
				</p>

				<p class="mb-4">
					I'm intrigued by numerous aspects of Artificial Intelligence and Cognitive Science,
					particularly in Efficient Machine Learning including Transfer and Few-Shot Learning, Large
					Language Model, AI-Agent, and Brain Neural Decoding.
				</p>

				<p class="mb-4">
					--&gt <InLineLink href="/cv.pdf" text="Curriculum Vitae" /> &lt--
				</p>
			</div>
		</div>
	</section>

	<section class="mt-16">
		<h2 class="text-xxl title mb-4">Updates</h2>
		<ul class="space-y-3 sm:space-y-3">
			<li class="flex">
				<time class="min-w-[120px] text-gray-500">Jul 2023</time>
				<p>
					Joining <InLineLink href="https://bubble.io/" text="Bubble.io" /> as an AI Resident research
					on text-to-web-application genearation
				</p>
			</li>
			<li class="flex">
				<time class="min-w-[120px] text-gray-500">May 2023</time>
				<p>Graduated from Columbia University with a M.S. in Computer Science ðŸŽ‰</p>
			</li>
			<li class="flex">
				<time class="min-w-[120px] text-gray-500">Sep 2021</time>
				<p>
					Joining the <InLineLink
						href="https://www.creativemachineslab.com/"
						text="Creative Machines Lab"
					/> and work on Machine Learning in Robotics ðŸ¤–
				</p>
			</li>
			<li class="flex">
				<time class="min-w-[120px] text-gray-500">May 2023</time>
				<p>
					Graduated from USC with B.S. Computational Neuroscience, B.A. Applied Mathematics, and a
					minor in Computer Science ðŸš€
				</p>
			</li>
			<li class="flex">
				<time class="min-w-[120px] text-gray-500">May 2020</time>
				<p>
					Joining the <InLineLink
						href="https://cogarch.ict.usc.edu/"
						text="Cognitive Architecture Lab"
					/> at <InLineLink href="https://ict.usc.edu/" text="USC ICT" /> and work on Reinforcement Learning
					for Social AI Agents.
				</p>
			</li>
		</ul>
	</section>

	<section class="mt-16">
		<h2 class="text-xxl title mb-4">Research</h2>
		<ul class="space-y-3 sm:space-y-10">
			{
				allResearchByDate.map((p: any) => (
					<li class="flex flex-col">
						<ResearchPreview research={p} />
					</li>
				))
			}
		</ul>
	</section>

	<section aria-label="Blog post list" class="mt-16">
		<h2 class="text-xxl title mb-4">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
